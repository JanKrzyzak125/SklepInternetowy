<Window x:Class="SklepInternetowy.WindowProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SklepInternetowy"
        mc:Ignorable="d"
        ShowInTaskbar="false"
        Title="WindowProduct" Height="600" Width="800">
    <Grid>
        <Image x:Name="PhotoProduct"  HorizontalAlignment="Left" Height="187" Margin="40,30,0,0" VerticalAlignment="Top" Width="228"/>
        <Button x:Name="EditProduct" Content="Edytuj" HorizontalAlignment="Center" Height="41" Margin="0,477,0,0" VerticalAlignment="Top" Width="152" Click="EditProduct_Click"/>
        <TextBox x:Name="NameProduct" Text="Nazwa Produktu" HorizontalAlignment="Left" Height="34" Margin="456,82,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="206"  IsReadOnly="True"/>
        <TextBox x:Name="Category"  Text="Nazwa Kategorii" HorizontalAlignment="Left" Height="41" Margin="456,141,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsReadOnly="True"/>
        <TextBox x:Name="Description"  HorizontalAlignment="Left" Height="163" Margin="456,0,0,0" Text="Opis Produktu" TextWrapping="Wrap" VerticalAlignment="Center" Width="206" IsReadOnly="True"/>
        <Button x:Name="Pay" Content="Zapłać" HorizontalAlignment="Left" Height="41" Margin="476,477,0,0" VerticalAlignment="Top" Width="132" Click="Click_Pay"/>
        <TextBox x:Name="Brand" Text="Marka produktu" HorizontalAlignment="Left" Height="41" Margin="608,141,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="128"  IsReadOnly="True"/>
        <Button x:Name="ChangePhoto"  Content="Zmień Zdjęcie" HorizontalAlignment="Left" Height="43" Margin="85,234,0,0" VerticalAlignment="Top" Width="151" Click="ChangePhoto_Click"/>

    </Grid>
</Window>
