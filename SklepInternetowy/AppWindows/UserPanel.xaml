<Window x:Class="SklepInternetowy.UserPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SklepInternetowy"
        mc:Ignorable="d"
        Title="UserPanel" 
        Height="824" Width="1000"
        ResizeMode="CanMinimize"
        Closing="Window_Closing"
        >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="320*"/>
            <RowDefinition Height="67*"/>

        </Grid.RowDefinitions>
        <DataGrid x:Name="UsersDataGrid" 
                  HorizontalAlignment="Center" 
                  Height="620" Width="980" 
                  VerticalAlignment="Center"  
                  MouseDoubleClick="DoubleClickUsersDataGrid" 
                  Background="AliceBlue"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                 AutoGeneratingColumn="dataGrid_AutoGeneratingColumn" Grid.Row="1"
                  
            />
        <Button Content="Dodaj produkt" 
                x:Name="ButtonAddProduct"
                
                Click="NewProduct_Click" 
                Cursor="Hand" Grid.Row="2" Margin="227,6,573,78" Width="200" Height="50"/>

        <Button x:Name="ButtonAddRetailSales"
                Content="Wystaw na sprzedaz" 
                Margin="227,67,573,27"  
                Cursor="Hand" Grid.Row="2" Height="40" 
                Click="ButtonAddRetailSales_Click"  
                
                />
        <ComboBox x:Name="ComboBoxViews" 
                  Background="Violet"
                  Margin="10,7,790,0"
                  Height="47"
                  VerticalAlignment="Top"
                  BorderBrush="AliceBlue" Grid.Row="2"
        />

        <Button x:Name="ButtonChangeViews" 
                Click="ClickChangeViews"
                Margin="10,68,790,24" 
               Height="40"

                Content="Zmiana widoku" Grid.Row="2" Cursor="Hand"
        />
        <Button Content="Edycja profilu" 
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Height="30" Margin="807,64,0,0"  Width="151" 
                Click="ClickChangeProfile" Cursor="Hand" Grid.Row="2"
                />
        <Button Content="Firma" 
                x:Name="ButtonCompany"
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Height="32" Margin="807,22,0,0" Width="151" 
                Click="CompanyClick" 
                Cursor="Hand" Grid.Row="2"
                />

        <DockPanel>
            <Menu DockPanel.Dock="Top" Height="26" Margin="0,0,0,0">
                <MenuItem Header="Profil" Height="26">
                    <MenuItem x:Name="MenuItemLogin"/>
                    <MenuItem x:Name="MenuItemLoginOut" />
                    <MenuItem Header="Close"/>
                </MenuItem>
                <MenuItem Header="Widok" Height="26"/>
                <MenuItem Header="_Pomoc" Height="26"/>
            </Menu>

        </DockPanel>
        <ComboBox x:Name="ComboBoxListBuyed" 
                  Visibility="Hidden" 
                  Background="Violet"
                  HorizontalAlignment="Left"  VerticalAlignment="Top" 
                  Height="33" Margin="449,15,0,0"  Width="207"
                  Grid.Row="2"
                  ToolTip="Pokazuje liste produktów konkretnej sprzedaży"
                  />
    </Grid>
</Window>
