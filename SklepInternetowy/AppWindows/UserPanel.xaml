<Window x:Class="SklepInternetowy.UserPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SklepInternetowy"
        mc:Ignorable="d"
        Title="UserPanel" 
        Height="824" 
        Width="1000">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="556*"/>
            <RowDefinition Height="99*"/>
            <RowDefinition Height="153*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="UsersDataGrid" 
                  HorizontalAlignment="Center" 
                  Height="541" Width="980"
                  Margin="0,10,0,0" 
                  VerticalAlignment="Top"  
                  MouseDoubleClick="DoubleClickUsersDataGrid" 
                  Background="AliceBlue"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                 AutoGeneratingColumn="dataGrid_AutoGeneratingColumn"
            />
        <Button Content="Dodaj produkt" 
                
                Margin="10,17,787,22"
                Height="60" Width="200"
                Click="NewProduct_Click" 
                Cursor="Hand" 
                Grid.Row="1"/>

        <Button x:Name="ButtonAddRetailSales"
                Content="Wystaw na sprzedaz" 
                Margin="466,17,334,22"
                Height="60" Width="200"  
                Cursor="Hand"  Grid.Row="1"  
                />
        <Button x:Name="ButtonShowUserProduct" 
                    Content="Pokaż produkty"
                    Height="60" Width="200" 
                     Margin="239,17,561,22" 
                Grid.Row="1" 
        />
        <ComboBox x:Name="ComboBoxViews" 
                  Background="Violet"
                  Margin="14,71,787,0"
                  Height="60" Width="200"
                  VerticalAlignment="Top"  
                  Grid.Row="2"
                  BorderBrush="AliceBlue"
        />

        <Button x:Name="ButtonChangeViews" 
                Click="ClickChangeViews"
                  Height="60" Width="200"
                Margin="259,71,541,22" 
                Content="Zmiana widoku" 
                Grid.Row="2"
        />
        <Button Content="Edycja profilu" 
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Height="60" Margin="483,71,0,0"  Width="183"
                Grid.Row="2" 
                Click="ClickChangeProfile" Cursor="Hand"
                />
        <Button Content="Firma" 
                x:Name="ButtonCompany"
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Height="60" Margin="692,71,0,0" Width="135"
                Grid.Row="2" 
                Click="CompanyClick" 
                Cursor="Hand"
                />
        

    </Grid>
</Window>
