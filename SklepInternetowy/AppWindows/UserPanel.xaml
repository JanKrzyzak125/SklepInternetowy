<Window x:Class="SklepInternetowy.UserPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SklepInternetowy"
        mc:Ignorable="d"
        Title="UserPanel" 
        Height="824" 
        Width="1000">

    <Grid>
        <DataGrid x:Name="UsersDataGrid" HorizontalAlignment="Center" Height="541" Margin="0,10,0,0" VerticalAlignment="Top" Width="980" MouseDoubleClick="DoubleClickUsersDataGrid" />
        <Button Content="Dodaj produkt" 
                HorizontalAlignment="Left" 
                Height="53" Margin="10,556,0,199" Width="165"
                Click="NewProduct_Click"/>

        <Button x:Name="ButtonAddRetailSales"
                Content="Wystaw na sprzedaz" 
                Height="50" Width="200"  
                Cursor="Hand" Margin="457,559,343,199"  
                />
        <Button x:Name="ButtonShowUserProduct" 
                    Content="Pokaż produkty"
                    Height="40" Margin="209,569,593,199" 
        />
        <ComboBox x:Name="ComboBoxViews" 
                  Margin="36,653,718,0" VerticalAlignment="Top"
                  
        />

        <Button x:Name="ButtonChangeViews" 
                Click="ClickChangeViews" 
                Margin="319,649,487,127" 
                Content="Zmiana widoku"
                />




    </Grid>
</Window>
