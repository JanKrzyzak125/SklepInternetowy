<Window x:Class="SklepInternetowy.UserPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SklepInternetowy"
        mc:Ignorable="d"
        Title="UserPanel" 
        Height="824" 
        Width="1000">

    <Grid>
        <DataGrid x:Name="UsersDataGrid" HorizontalAlignment="Center" Height="702" Margin="0,10,0,0" VerticalAlignment="Top" Width="980" MouseDoubleClick="DoubleClickUsersDataGrid" />
        <Button Content="Dodaj produkt" 
                HorizontalAlignment="Left" 
                Height="53" Margin="28,732,0,0" Width="165"
                Click="NewProduct_Click"/>

        <Button x:Name="ButtonAddRetailSales"
                Content="Wystaw na sprzedaz" Height="50" Width="200" Margin="208,741,592,17"  
                >
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-1.685"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.471"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>


    </Grid>
</Window>
